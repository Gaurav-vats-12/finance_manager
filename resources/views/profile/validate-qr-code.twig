{% extends "./layout/default.twig" %}

{% block breadcrumbs %}
    {{ Breadcrumbs.renderIfExists(Route.getCurrentRoute.getName) }}
{% endblock %}

{% block content %}
    {{ Form.open({'route' : 'profile.validate-qr-code', 'class' : 'form-horizontal','id' : 'validate-qr-code' }) }}
    
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'two_factor_auth'|_ }}</h3>
                </div>
                <div class="box-body">

                    <p class="text-info">{{ 'validate_qr_code_info'|_ }}</p>

                    {% if errors|length > 0 %}
                        <ul>
                            <ul>
                                {% for error in errors.all %}
                                    <li class="text-danger">{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </ul>


                    {% endif %}

                    <div class="form-group">

                        <div class="col-sm-offset-2 col-sm-8">
                            
                            <img src="{{ qrcode }}" />
                            <br />
                            {{ secret }}

                        </div>
                    </div>

                    
                    {{ ExpandedForm.text('code') }}

                


                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-success pull-right">{{ 'pref_save_settings'|_ }}</button>
                </div>
            </div>
        </div>
    </div>
    {{ Form.close|raw }}
{% endblock %}
