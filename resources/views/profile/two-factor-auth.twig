{% extends "./layout/default.twig" %}

{% block breadcrumbs %}
    {{ Breadcrumbs.renderIfExists(Route.getCurrentRoute.getName) }}
{% endblock %}

{% block content %}
    {{ Form.open({'class' : 'form-horizontal','id' : 'two-factor-auth-settings'}) }}

    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'two_factor_auth'|_ }}</h3>
                </div>
                <div class="box-body">

                    {% if errors|length > 0 %}
                        <ul>
                            <ul>
                                {% for error in errors.all %}
                                    <li class="text-danger">{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </ul>

                    {% endif %}

                    <div class="form-group">
                        <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>                                        
                                            <input type="checkbox" name="enable_2fa" value="1"
                                                   {% if is_2fa_enabled == '1' %} checked {% endif %}> {{ 'enable_two_factor_auth'|_ }}                                      
                                    </label>
                                </div>
                            </div>
                    </div>                    


                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-success pull-right">{{ 'pref_save_settings'|_ }}</button>
                </div>
            </div>
        </div>
    </div>
    {{ Form.close|raw }}
{% endblock %}
