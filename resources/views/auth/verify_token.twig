{% extends "./layout/guest.twig" %}

{% block content %}

    {% if errors.has('code') %}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">{{ 'close'|_ }}</span>
                    </button>
                    <strong>Error!</strong> {{ errors.get('token')[0] }}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="login-box-body">
        <p class="login-box-msg">Enter your verification code</p>

        <form action="{{ URL.to('/verify_token') }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token() }}"/>

            <div class="form-group has-feedback">
                <input type="text" name="code" class="form-control" placeholder="Verification code"/>
            </div>
            
            <div class="row">                
                <!-- /.col -->
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary pull-right btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        
    </div>
    <!-- /.login-box-body -->
{% endblock %}

